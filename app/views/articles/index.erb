<div class="banner">
  <div class="row">
    <h1>About me</h1>
    <div class="about-me-box">
      <h2>About me</h2>
      <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam pretium hendrerit enim. </p>
    </div>
    <%= image_tag('banner.jpg') %>
  </div>
</div>

<div class="container">

  <div class="navbar">
    <ul>
      <li><%= link_to "Home", articles_path%></li>
      <li><%= link_to "Historique", history_path %></li>
      <li>Contact</li>
      <li class="search-item"><i class="fas fa-search"></i>   Search</li>
    </ul>
  </div>

  <% @articles.each do |article| %>
    <div class="article-card">
      <div class="article-info">
        <ul>
          <li>
            <p class="article-date"><%= article.date.strftime('%d %b %Y').upcase%></p>
            <p class="article-title"><%= link_to article.title, article_path(article) %></p>
            <p class="article-content"><%= link_to article.content, article_path(article) %></p>
          </li>
        </ul>
      </div>
      <%= image_tag('article_image.jpg') %>
    </div>
  <% end %>
</div>
